{
  "manifest_version": 3,
  "name": "CHMURBot",
  "version": "1.3",
  "description": "Bot pomagajacy wypełnić formularze Microsoft Forms, teraz ze wsparciem dla ramek iframe.",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://forms.office.com/*",
    "https://forms.microsoft.com/*",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["database.js", "content.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}